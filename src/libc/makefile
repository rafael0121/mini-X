# Compile Libraries

#===============================================================================
# Artifacts
#===============================================================================

# C Source Files
SRC_C = $(wildcard ./*.c)

# Object Files
OBJ = $(SRC_C:.c=.o)

#===============================================================================
# Toolchain Configuration
#===============================================================================

all: lib.a

lib.a: $(OBJ)  
	$(AR) $(ARFLAGS) $(LIBRARIE_DIR)/$@ $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) $< -c -o $@

clean:
	rm -rf $(OBJ)
